{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./lib",
        "outDir": "./src",
		"module": "commonjs",
        "pretty": true,
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "allowJs": true,
        "target": "es2015" ,
        "lib": ["es2015", "dom"]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        /* ... */
    }
}
