{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./lib",
        "outDir": "./src",
		"module": "commonjs",
        "pretty": true,
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es2015" ,
        "lib": ["es2015", "dom"]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        /* ... */
    },
    "plugins": [
        "tslint:recommended",
        "tslint-config-prettier"
    ]
}
